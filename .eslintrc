{
  "env": {
    "browser": true
  },
  "extends": [
    "standard",
    "standard-react",
    "prettier/standard",
    "plugin:prettier/recommended"
  ],
  "overrides": [
    {
      "files": [
        "**/*.test.js"
      ],
      "env": {
        "jest": true
      }
    }
  ],
  "parser": "babel-eslint",
  "plugins": ["react-hooks"],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error"
  }
}
